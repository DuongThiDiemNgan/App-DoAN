<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ProductCate">
  <androidx.appcompat.widget.Toolbar
      android:background="#f4ede7"
      app:titleTextColor="@color/colorBlack"
      app:title="Sản Phẩm Theo Loại"
      android:id="@+id/toolbar_product_cate"
      android:fontFamily="@font/leckerlione_regular"
      android:layout_width="match_parent"
      android:layout_height="?attr/actionBarSize"></androidx.appcompat.widget.Toolbar>
  <androidx.recyclerview.widget.RecyclerView
      android:background="#f4ede7"
      android:layout_marginTop="5dp"
      android:id="@+id/recyclerview_product_cate"
      android:layout_width="match_parent"
      android:layout_height="match_parent">

  </androidx.recyclerview.widget.RecyclerView>

  </LinearLayout>